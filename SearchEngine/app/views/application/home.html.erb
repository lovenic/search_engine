<div class="container">
  <h1>Search </h1>
  <div class="row">
      <div class="input-group col-md-8">
        <%= form_for :words, url: "dig", remote: true, class: "navbar-form", role: "search" do |f| %>
            <%= f.text_field :sentence, class: "form-control", placeholder: "Search for..." %>
            <%= f.submit 'Go', class: 'btn btn-default' %>
        <% end %>
      </div>
  </div>
  <div class="row">
    <div class="results-list col-md-8">

    </div>

  </div>
</div>
<div class="pagination">
</div>

